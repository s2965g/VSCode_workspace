{
    "printWidth": 100,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "printWidth": 80,
                "proseWrap": "always",
                "tabWidth": 2
            }
        },
        {
            "files": [
                "*.json",
                "*.jsonc"
            ],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.xml",
            "options": {
                "tabWidth": 4,
                "printWidth": 120,
                "singleAttributePerLine": true
            }
        }
    ]
}